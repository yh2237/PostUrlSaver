{
  "manifest_version": 3,
  "name": "PostUrlSaver",
  "version": "1.0",
  "description": "XのTL上の各ポストに保存ボタンを追加し、URLを保存します。",
  "permissions": [
    "storage",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}